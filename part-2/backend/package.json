{
  "name": "conversation-api",
  "description": "Serverless conversation API with TypeScript",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.398.0",
    "@aws-sdk/lib-dynamodb": "^3.398.0",
    "@middy/core": "^6.4.5",
    "@middy/http-error-handler": "^6.4.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "clean": "rm -rf .build && rm -rf .aws-sam",
    "build": "chmod +x build.sh && ./build.sh && sam build",
    "deploy": "sam deploy --profile \"${npm_config_profile:-default}\"",
    "start:local": "sam local start-api --port 4000 --env-vars env.json"
  }
}
